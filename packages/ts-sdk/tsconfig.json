{
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "isolatedModules": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "noUnusedLocals": false
  },
  "exclude": [
    "src/test/**/*",
    "dist",
    "node_modules",
    "src/debuggable.ts",
    "src/test/__fixtures__/*"
  ]
}
